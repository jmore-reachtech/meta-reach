#!/bin/sh

set -e

WORKDIR=/application/bin
QTAPP=qml-viewer
#DISPLAY_ROT="-display Transformed:Rot90:0"

case "$1" in
  start | debug)
	echo "Starting qt application"
	if [ -f /etc/profile.d/tslib.sh ]; then
		source /etc/profile.d/tslib.sh
	fi

	if [ -e "$TSLIB_TSDEVICE" ]; then
		if [ ! -f /etc/pointercal ]; then
			/usr/bin/ts_calibrate
		fi
	fi

        if [ -f /etc/profile.d/qml-viewer.sh ]; then
                source /etc/profile.d/qml-viewer.sh
        fi


	cd $WORKDIR
	if [ "$1" = "start" ]; then
          ./$QTAPP $DISPLAY_ROT -plugin tslib &> /dev/null &
        else
          ./$QTAPP $DISPLAY_ROT -plugin tslib &
        fi
        ;;
  stop)
	echo "Stopping qt application"
	killall $QTAPP
	;;
  restart)
	$0 stop
	$0 start
	;;
  *)
	echo "usage: $0 { start | stop | restart }" >&2
	exit 1
	;;
esac

exit 0
